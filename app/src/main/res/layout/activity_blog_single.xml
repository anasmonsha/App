<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/singleRemoveBtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="beans.wishbee.anas.app.BlogSingleActivity">

    <TextView
        android:id="@+id/singleBlogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/singleBlogImage"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        android:text="BlogTitleGoeshere"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/singleBlogDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/singleBlogTitle"
        android:layout_below="@+id/singleBlogTitle"
        android:layout_marginTop="15dp"
        android:text="Blog Description Goes here..." />

    <ImageView
        android:id="@+id/singleBlogImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/upload" />

    <Button
        android:id="@+id/singleRemoveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/singleBlogDesc"
        android:layout_marginTop="37dp"
        android:text="Remove Post"
        android:visibility="invisible" />
</RelativeLayout>
