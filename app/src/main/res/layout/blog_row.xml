<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/prf_Image"
                android:layout_width="38dp"
                android:layout_height="36dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/placeholder" />

            <TextView
                android:id="@+id/post_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/prf_Image"
                android:paddingBottom="2dp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_loc"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_username"
                android:layout_toEndOf="@+id/prf_Image"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:text="TextView" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/upload" />

        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_weight="0.93"
            android:padding="5dp"
            android:text="Post Title Goes here"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/prf_Image"
            android:layout_marginTop="18dp"
            android:padding="10dp"
            android:text="The Post description Goes Here" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/like_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                app:srcCompat="@mipmap/like_gray" />
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>